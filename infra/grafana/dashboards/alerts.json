{
  "dashboard": {
    "id": null,
    "uid": null,
    "title": "HeyAnon - Alerts",
    "schemaVersion": 37,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "type": "stat",
        "title": "Stale Heartbeats",
        "targets": [
          {
            "expr": "time() - max(heyanon_strategy_last_heartbeat_unixtime) by (strategy_id)",
            "refId": "A"
          }
        ],
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 6}
      },
      {
        "type": "graph",
        "title": "API p95 latency",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(heyanon_request_latency_seconds_bucket[5m])) by (le, path))",
            "refId": "A"
          }
        ],
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 6}
      },
      {
        "type": "graph",
        "title": "API 5xx rate",
        "targets": [
          {
            "expr": "sum(rate(heyanon_requests_total{status=~\"5..\"}[5m])) / sum(rate(heyanon_requests_total[5m]))",
            "refId": "A"
          }
        ],
        "gridPos": {"x": 0, "y": 6, "w": 24, "h": 6}
      }
    ]
  },
  "overwrite": true
}
